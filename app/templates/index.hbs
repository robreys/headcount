		<div class="login">
				{{input type="text" placeholder="email" name="user"}}<br>
				{{input type="password" placeholder="password" name="password"}}<br>
				{{#unless register}}
				<input type="button" {{action 'login'}} value="Login">
				<input type="button" {{action 'register'}}value="Register">
				{{else}}
				{{input type="text" placeholder="First Name" name="firstName" value=userFName}}<br>
